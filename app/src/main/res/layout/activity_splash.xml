<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/qnblogo" />


    <timesofmoney.qnbmerchant.customviews.CustomTextView
        android:id="@+id/txt"
        android:textColor="@color/textcolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/r1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/defaultlanguage"
        android:textSize="18dp" />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/l1"
        android:layout_marginBottom="45dp">

        <timesofmoney.qnbmerchant.customviews.CustomTextView
            android:id="@+id/txtEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textcolor"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@+id/div"
            android:text="English"
            android:textSize="18dp" />

        <View
            android:id="@+id/div"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@color/tab_bg" />

        <timesofmoney.qnbmerchant.customviews.CustomTextView
            android:id="@+id/txtArebic"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/div"
            android:text="العربية"
            android:textSize="18dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/qnb_merchant_info_lrg" />


        <timesofmoney.qnbmerchant.customviews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:clickable="false"
            android:ellipsize="end"
            android:text="@string/default_language_can_be_changed_from_settings_section_after_login"
            android:textColor="@color/textcolor"
            android:textSize="14dp" />

    </LinearLayout>
</RelativeLayout>
