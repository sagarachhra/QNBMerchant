<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_pink"
   >
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mvisa_consumer_p2m_topsml"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgvwBackArrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:padding="5dp"
                    android:src="@drawable/backforwardarrow" />

                <timesofmoney.qnbmerchant.customviews.CustomTextView
                    android:id="@+id/txtvwMerchantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="Hazefa Masud"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />


            </LinearLayout>

            <timesofmoney.qnbmerchant.customviews.CustomTextView
                android:id="@+id/txtvwCardNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="xxxx xxxx xxxx 1234"
                android:textColor="#ffffff"
android:layout_marginLeft="45dp"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="45dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:layout_weight="1"
                    android:orientation="vertical">

                <timesofmoney.qnbmerchant.customviews.CustomTextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="Transaction ID"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <timesofmoney.qnbmerchant.customviews.CustomTextView
                    android:id="@+id/txtvwTransactionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:text="ERTYU12345"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <timesofmoney.qnbmerchant.customviews.CustomTextView
                        android:id="@+id/txtvwmVisaID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:text="@string/date_and_time"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />

                    <timesofmoney.qnbmerchant.customviews.CustomTextView
                        android:id="@+id/txtvwAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:text="Oct 14' 2015 | 14:30"
                        android:textColor="#ffffff"

                        android:textSize="18sp" />

                </LinearLayout>

                </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.Toolbar>
</LinearLayout>