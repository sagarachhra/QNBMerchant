<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/qnb_consumer_login_top_bg"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgvwHamIcon"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ham_icon" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:src="@drawable/qnb_consumer_login_qnb_logo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="6.5"
                android:gravity="center">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:src="@drawable/qnb_consumer_login_mvisa_logo" />

                <RelativeLayout
                    android:id="@+id/layout_notofication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:clickable="false"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentLeft="true"
                        android:layout_height="22dp"

                        android:src="@drawable/qnb_consumer_dashboard_notificationl" />


                    <timesofmoney.qnbmerchant.customviews.CustomTextView
                        android:id="@+id/txtCount"
                        android:background="@drawable/red_circle"
                        android:gravity="center"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="false"
                        android:text="1"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />



                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</LinearLayout>
