<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:param="http://schemas.android.com/tools">
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/tab_bg"
    app:contentInsetStart="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/mvisa_consumer_p2m_topsml"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgvwBackArrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/backforwardarrow" />

            <timesofmoney.qnbmerchant.customviews.CustomTextView
                android:id="@+id/title"
                android:layout_toRightOf="@+id/imgvwBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                param:fontType="regular"
                android:text="Title"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/layout_notofication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_toRightOf="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:padding="6dp">

                <ImageView
                    android:layout_width="25dp"
                    android:clickable="false"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_height="22dp"
                    android:src="@drawable/qnb_consumer_dashboard_notificationl" />


                <timesofmoney.qnbmerchant.customviews.CustomTextView
                    android:id="@+id/txtCount"
                    android:background="@drawable/red_circle"
                    android:gravity="center"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="10dp" />



            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">

            <timesofmoney.qnbmerchant.customviews.CustomTextView
                android:id="@+id/txtvwLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Cairo, Egypt"
                android:textColor="#ffffff"
                param:fontType="light"
                android:textSize="14sp" />

            <timesofmoney.qnbmerchant.customviews.CustomTextView
                android:id="@+id/txtvwmVisaID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:text="mVisa ID: 123456789"
                param:fontType="light"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <timesofmoney.qnbmerchant.customviews.CustomTextView
                android:id="@+id/txtvwAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                param:fontType="light"
                android:text="Amount: EGP 1500"
                android:textColor="#ffffff"

                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.Toolbar>
</LinearLayout>