<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/qnb_consumer_dashboard_topbg"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3.5">

                <LinearLayout
                    android:id="@+id/action_bar_imageview_left_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="-10dp"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/menu" />

                </LinearLayout>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/qnb_consumer_login_qnb_logo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="6.5">



                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/layout_call"

                    android:layout_marginRight="10dp"

                    android:src="@drawable/qnb_consumer_login_mvisa_logo" />


                <RelativeLayout
                    android:id="@+id/layout_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/layout_notofication"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_marginTop="4dp"
                        android:layout_height="22dp"
                        android:src="@drawable/qnb_consumer_dashboard_call" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_notofication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:clickable="false"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentLeft="true"
                        android:layout_height="22dp"
                        android:src="@drawable/qnb_consumer_dashboard_notificationl" />


                        <timesofmoney.qnbmerchant.customviews.CustomTextView
                            android:id="@+id/txtCount"
                            android:background="@drawable/red_circle"
                            android:gravity="center"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:text="1"
                            android:textColor="#ffffff"
                            android:textSize="10dp" />



                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.Toolbar>

</LinearLayout>
